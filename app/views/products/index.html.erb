<p id="notice"><%= notice %></p>

<div class="container-fluid anchor">
  <div class="new">
    <h1>Our Bikes</h1>
  </div>
  <% @products.each do |product| %>
  <div class="row" id="productos">
    <div class="col-md-4">
      <h1><%= product.name %></h1>
      <p><%= product.description %></p>
      <p><a href"<%= product_url(product) %>"><%= link_to(image_tag(product.image_url, class: "img-responsive"), product) %></a></p>
      <p><%= product.description %></p>
      <p><%= link_to 'Show', product %></p>
      <p><%= link_to 'Edit', edit_product_path(product) %></p>
      <p><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
    </div><!-- /col --> 
  </div>
  <% end %>
</div>


<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= image_tag(product.image_url) %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

